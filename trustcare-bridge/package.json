{
  "name": "trustcare-bridge",
  "version": "1.0.0",
  "description": "WebSocket bridge service for TrustCareConnect AI processing",
  "main": "src/bridge-server.js",
  "scripts": {
    "start": "node src/bridge-server.js",
    "dev": "nodemon src/bridge-server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\"tests/.*\\.test\\.js$\" --testNamePattern=\"^((?!integration).)*$\"",
    "test:integration": "jest --testPathPattern=\"tests/integration\\.test\\.js$\" --runInBand --detectOpenHandles",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:load": "artillery run tests/load-test.yml",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "keywords": [
    "websocket",
    "healthcare",
    "ai",
    "icp",
    "bridge"
  ],
  "author": "TrustCareConnect Team",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.14.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "@dfinity/agent": "^0.21.2",
    "@dfinity/principal": "^0.21.2",
    "@dfinity/candid": "^0.21.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "prom-client": "^15.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "artillery": "^2.0.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "@jest/globals": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
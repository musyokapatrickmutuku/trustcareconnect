# TrustCareConnect Bridge Environment Configuration
# Copy this file to .env and update with your actual values

# ================================
# Application Configuration
# ================================
NODE_ENV=development
LOG_LEVEL=debug
PORT=3001
WS_PORT=8080

# ================================
# Database Configuration
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trustcare_bridge
DB_USER=trustcare_user
DB_PASSWORD=your_secure_password
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ================================
# Redis Configuration
# ================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ================================
# API Keys and Secrets
# ================================
NOVITA_API_KEY=your_novita_api_key_here
NOVITA_BASE_URL=https://api.novita.ai/openai/v1
JWT_SECRET=your_very_secure_jwt_secret_here
BRIDGE_SECRET_KEY=your_bridge_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# ================================
# ICP Configuration
# ================================
ICP_CANISTER_ID=uxrrr-q7777-77774-qaaaq-cai
ICP_HOST=http://localhost:4943
ICP_AGENT_HOST=http://127.0.0.1:4943
DFX_NETWORK=local

# ================================
# SSL and Domain Configuration
# ================================
DOMAIN=bridge.trustcareconnect.com
SSL_CERT_PATH=/etc/ssl/certs/trustcare.pem
SSL_KEY_PATH=/etc/ssl/private/trustcare.key

# ================================
# Docker Registry
# ================================
DOCKER_REGISTRY=ghcr.io/trustcareconnect
DOCKER_REGISTRY_USERNAME=your_username
DOCKER_REGISTRY_PASSWORD=your_token

# ================================
# Notification Configuration
# ================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
NOTIFICATION_EMAIL=admin@trustcareconnect.com

# ================================
# Monitoring and Logging
# ================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elastic_password

SENTRY_DSN=https://your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MEDICAL_QUERY_RATE_LIMIT=10

# ================================
# Deployment Configuration
# ================================
ENVIRONMENT=development
VERSION=dev
DEPLOYMENT_ID=local-dev
ROLLBACK_ENABLED=true

# ================================
# Security Configuration
# ================================
CORS_ORIGINS=http://localhost:3000,http://localhost:4943,https://app.trustcareconnect.com
TRUSTED_PROXIES=127.0.0.1,::1
SESSION_SECRET=your_session_secret_here

# ================================
# External Services
# ================================
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_ENVIRONMENT=sandbox

TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# ================================
# Feature Flags
# ================================
ENABLE_MEDICAL_AI=true
ENABLE_DOCTOR_REVIEW=true
ENABLE_EMERGENCY_ALERTS=true
ENABLE_METRICS=true
ENABLE_AUDIT_LOGGING=true

# ================================
# Performance Configuration
# ================================
MAX_CONCURRENT_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000
HTTP_TIMEOUT=30000
DB_POOL_SIZE=20
REDIS_POOL_SIZE=10
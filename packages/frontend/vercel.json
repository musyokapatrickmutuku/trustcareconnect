{
  "name": "trustcareconnect-frontend",
  "version": 2,
  "framework": "create-react-app",
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "installCommand": "npm install",
  "devCommand": "npm start",
  "public": true,
  "github": {
    "silent": true
  },
  "env": {
    "REACT_APP_BACKEND_CANISTER_ID": "@react_app_backend_canister_id",
    "REACT_APP_ICP_NETWORK": "@react_app_icp_network",
    "REACT_APP_ICP_HOST": "@react_app_icp_host",
    "REACT_APP_API_HOST": "@react_app_api_host",
    "REACT_APP_ENVIRONMENT": "@react_app_environment"
  },
  "build": {
    "env": {
      "REACT_APP_BACKEND_CANISTER_ID": "@react_app_backend_canister_id",
      "REACT_APP_ICP_NETWORK": "@react_app_icp_network", 
      "REACT_APP_ICP_HOST": "@react_app_icp_host",
      "REACT_APP_API_HOST": "@react_app_api_host",
      "REACT_APP_ENVIRONMENT": "@react_app_environment"
    }
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/service-worker.js",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://*.icp0.io https://*.dfinity.network https://icp-api.io; frame-ancestors 'none';"
        }
      ]
    }
  ],
  "functions": {
    "app/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "regions": ["iad1"],
  "cleanUrls": true,
  "trailingSlash": false
}
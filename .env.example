# TrustCareConnect Environment Configuration Template
# Status: PRODUCTION-READY | Last Updated: August 19, 2025
# Copy this file to .env.local and fill in your values

# ======================
# ICP BACKEND CONFIGURATION
# ======================
# Backend canister ID (get from dfx canister id backend)
REACT_APP_BACKEND_CANISTER_ID=your_backend_canister_id_here
ICP_BACKEND_CANISTER_ID=your_backend_canister_id_here

# ICP Network (local for development, ic for production)
REACT_APP_ICP_NETWORK=local
ICP_NETWORK=local

# ICP Host URL
REACT_APP_ICP_HOST=http://localhost:4943
ICP_HOST=http://localhost:4943

# ======================
# AI PROXY CONFIGURATION
# ======================
# AI Proxy service URL
REACT_APP_API_HOST=http://localhost:3001
API_HOST=http://localhost:3001

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Claude API Configuration (Anthropic)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=1000

# ======================
# APPLICATION CONFIGURATION
# ======================
# Environment (development, staging, production)
REACT_APP_ENVIRONMENT=development
NODE_ENV=development

# Application URLs
REACT_APP_APP_URL=http://localhost:3000
APP_URL=http://localhost:3000

# ======================
# SECURITY CONFIGURATION
# ======================
# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# LOGGING CONFIGURATION
# ======================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ======================
# DFX DEPLOYMENT CONFIGURATION
# ======================
# DFX Identity (base64 encoded PEM file for production)
DFX_IDENTITY=

# Deployment cycles (for IC deployment)
DEPLOYMENT_CYCLES=2000000000000

# ======================
# DEPLOYMENT TARGETS
# ======================
# Deployment target (docker, aws, gcp, railway, render, vercel, netlify)
DEPLOYMENT_TARGET=docker

# AWS Configuration (if using AWS deployment)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=

# GCP Configuration (if using GCP deployment)
GCP_PROJECT_ID=
GCP_REGION=us-central1

# Custom Domain (optional)
CUSTOM_DOMAIN=

# ======================
# PRODUCTION OVERRIDES
# ======================
# These will be automatically set by deployment scripts
# REACT_APP_BACKEND_CANISTER_ID=<production_canister_id>
# REACT_APP_ICP_NETWORK=ic
# REACT_APP_ICP_HOST=https://icp-api.io
# REACT_APP_API_HOST=https://api.trustcareconnect.com
# REACT_APP_ENVIRONMENT=production